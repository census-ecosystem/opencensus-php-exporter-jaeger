{
    "name": "opencensus/opencensus-exporter-jaeger",
    "description": "OpenCensus Jaeger Exporter for PHP",
    "type": "library",
    "require": {
        "php-64bit": ">=5.6",
        "opencensus/opencensus": "~0.4",
        "apache/thrift": "^0.11",
        "ext-sockets": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0 || ^6.5",
        "squizlabs/php_codesniffer": "2.*",
        "guzzlehttp/guzzle": "~6.0"
    },
    "suggest": {
        "ext-gmp": "It can handle the large numbers",
        "ext-bcmath": "It can handle large integer numbers"
    },
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Jeff Ching",
            "email": "chingor@google.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "OpenCensus\\Trace\\Exporter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenCensus\\Tests\\Unit\\Trace\\Exporter\\": "tests/unit/",
            "OpenCensus\\Tests\\Integration\\Trace\\Exporter\\": "tests/integration/"
        }
    },
    "scripts": {
        "post-dependencies-solving": "OpenCensus\\Trace\\Exporter\\Installer::checkPhpExtDependency"
    }
}
